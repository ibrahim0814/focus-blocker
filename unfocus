#!/bin/bash

# Unfocus command - deactivate website blocking

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
FOCUS_SCRIPT="$SCRIPT_DIR/focus"
HOSTS_FILE="/etc/hosts"
FOCUS_MARKER="# FOCUS_BLOCKER_START"
FOCUS_MARKER_END="# FOCUS_BLOCKER_END"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if focus mode is currently active
is_focused() {
    grep -q "$FOCUS_MARKER" "$HOSTS_FILE" 2>/dev/null
}

# Disable Do Not Disturb mode
disable_dnd() {
    echo -e "${BLUE}Disabling Do Not Disturb...${NC}"
    
    # Try using shortcuts command (macOS Monterey 12.0+)
    if command -v shortcuts &> /dev/null; then
        # Try to turn off Do Not Disturb
        shortcuts run "Turn Off Focus" 2>/dev/null || {
            # Fallback: Try using keyboard shortcut
            osascript -e 'tell application "System Events" to keystroke "d" using {shift down, control down, option down, command down}' 2>/dev/null || {
                # Alternative method using defaults
                defaults -currentHost write ~/Library/Preferences/ByHost/com.apple.notificationcenterui doNotDisturb -boolean false
                killall NotificationCenter 2>/dev/null
            }
        }
        echo -e "${GREEN}✓ Do Not Disturb disabled${NC}"
    else
        # Fallback for older macOS versions - use AppleScript
        osascript << 'EOF' 2>/dev/null
tell application "System Events"
    try
        -- Try to disable DND using menu bar
        tell application process "Control Center"
            click menu bar item "Control Center" of menu bar 1
            delay 0.5
            click checkbox "Do Not Disturb" of window "Control Center"
            key code 53 -- Escape to close Control Center
        end tell
    on error
        -- Alternative: Use keyboard shortcut if available
        keystroke "d" using {shift down, control down, option down, command down}
    end try
end tell
EOF
        echo -e "${GREEN}✓ Do Not Disturb disabled${NC}"
    fi
}

# Remove focus block entries from hosts file
if ! is_focused; then
    echo -e "${YELLOW}Focus mode is not currently active.${NC}"
    exit 0
fi

echo -e "${BLUE}Deactivating focus mode...${NC}"

# Remove focus blocker section from hosts file
sudo sed -i.bak "/$FOCUS_MARKER/,/$FOCUS_MARKER_END/d" "$HOSTS_FILE"

# Flush DNS cache
sudo dscacheutil -flushcache
sudo killall -HUP mDNSResponder 2>/dev/null

# Disable Do Not Disturb
disable_dnd

echo -e "${GREEN}✓ Focus mode deactivated! All sites unblocked.${NC}"
